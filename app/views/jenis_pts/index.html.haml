- provide(:title, "Data Jenis Perguruan Tinggi")
%a.btn.btn-info.btn-small.small-margin-bottom{:href => "#{ new_jenis_pt_path }"} Tambah Jenis Perguruan Tinggi
.relativeWrap
  .widget.widget-gray.widget-gray-white
    .widget-head
      %h4.heading Data Jenis Perguruan Tinggi
    .widget-body
      %table.dynamicTable.table.table-striped.table-bordered.table-primary.table-condensed{:border => "0", :cellpadding => "0", :cellspacing => "0"}
        %thead
          %tr
            %th{:width => "350"} Jenis PT
            %th{:width => "50"} &nbsp;
        %tbody
          - @jenis_pts.each do |jenis_pt|
            %tr.gradeX
              %td= jenis_pt.jenis
              %td.center.actions
                %a.btn-action.glyphicons.pencil.btn-success{:href => "#{ edit_jenis_pt_path(jenis_pt) }"}
                  %i
                %a.btn-action.glyphicons.remove_2.btn-danger{:href => "#{ jenis_pt_path(jenis_pt) }", :method => :delete}
                  %i