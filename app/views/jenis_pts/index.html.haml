- provide(:title, "Data Jenis Perguruan Tinggi")
.row-fluid
  .span12
    = link_to "Tambah Jenis Perguruan Tinggi", new_jenis_pt_path, role: "button", class: "btn btn-mini btn-primary"
.row-fluid
  .span12
    .box.corner-all
      .box-header.grd-white.corner-top
        .header-control
          %a{ "data-box" => "collapse" }
            %i.icofont-caret-up
          %a{"data-box" => "close", "data-hide" => "bounceOutRight"} &times;
        %span Data Jenis Perguruan Tinggi
      .box-body
        %table#datatables.table.table-hover.responsive
          %thead
            %tr
              %th Jenis PT
              %th &nbsp;
          %tbody
            - @jenis_pts.each do |jenis_pt|
              %tr
                %td= jenis_pt.jenis
                %td.center
                  %span.label.label-info
                    = link_to "Edit", edit_jenis_pt_path(jenis_pt)
                  %span.label.label-important
                    = link_to "Delete",jenis_pt_path(jenis_pt), method: :delete, class: "delete"

:javascript
  $(document).ready(function() {
      // try your js
      
      // peity chart
      $("span[data-chart=peity-bar]").peity("bar");
                      
      // datatables
      $('#datatables').dataTable( {
          "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
          "sPaginationType": "bootstrap",
          "oLanguage": {
                  "sLengthMenu": "_MENU_ records per page"
          }
      });

      $('.delete').on('click', function () {
          return confirm('Anda yakin akan menghapus data ini?');
      });
  });