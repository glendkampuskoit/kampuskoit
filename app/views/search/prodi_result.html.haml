- provide(:title, 'Hasil Pencarian')
.row
  .large-9.columns
    .row.category-panel
      .large-5.columns
        %ul.button-group.even-2
          %li= link_to "Perguruan Tinggi", "#{search_path}?att=univ&keyword=#{@params_value[:keyword]}", :class => "button medium alert" 
          %li= link_to "Program Studi", "#{search_path}?att=prodi&keyword=#{@params_value[:keyword]}", :class => "button medium alert active-category"

    .row
      .large-12.columns
        %p.result-number Ditemukan #{ @prodis.count } hasil pencarian

    .row.search-result
      .large-12.columns
        - @prodis.each do |prodi|
          %article
            .row
              .large-5.columns= image_tag(prodi.featured_image_url(:thumb), :alt => "Gambar belum tersedia", :onerror => "this.src='/assets/default.jpg';")

              .large-7.columns
                %h6.entry-header= link_to prodi.nama_prodi.titleize, univ_prodi_path(prodi.univ, prodi)
                %h6.entry-sub-header= link_to prodi.univ.nama_pt.titleize, univ_path(prodi.univ)

                %p.entry-place
                  - if prodi.kota.present? 
                    #{ prodi.kota.kota.titleize }, #{ prodi.kota.provinsi.provinsi.titleize }

                %p.entry-text
                  = prodi.profile
                .entry-more
                  = link_to "Read More", univ_prodi_path(prodi.univ, prodi), :class => "tiny button read-more-button left" 
                  %p.entry-link.right
                    - if prodi.website.present? && prodi.email.present? 
                      %span= link_to prodi.website, prodi.website, :target => "_blank"
                      %span.entry-link-separator | 
                      %span= mail_to prodi.email, prodi.email
                    - elsif prodi.email.present? 
                      %span= mail_to prodi.email, prodi.email
                    - elsif prodi.email.present? 
                      %span= mail_to prodi.email, prodi.email

        = will_paginate @prodis, :renderer => PaginationListLinkRenderer, :class => "pagination-centered" 
  = render :partial => "layouts/sidebar" 