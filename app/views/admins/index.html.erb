<% provide(:title, "Administrator List") %>
<%= link_to new_admin_path do %><button class="btn btn-primary"><i class="icon-plus-sign glyphw-white"></i> Add New</button><% end %>
<div style="padding: 15px; padding-bottom: 0px;"></div>
<table class="table table-striped table-bordered">
   <thead>
      <tr>
         <th>No.</th>
         <th>Nama</th>
         <th>Role</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
   		<% no = @admins.offset %>
      <% @admins.each do |admin| %>
      <tr>
         <td><%= no += 1 %>.</td>
         <td><%= admin.nama %></td>
         <td><%= admin.role.capitalize %></td>
         <td>
         	<div class="btn-group pull-right">
              <%= link_to edit_admin_path(admin), :role => "button", :class => "btn btn-info" do %><i class="icon-edit glyphw"></i> Edit <% end %>
             <%= link_to admin_path(admin), method: :delete, :role => "button", :class => "btn btn-danger" do %><i class="icon-trash glyphw"></i> Hapus <% end %>
          </div>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>