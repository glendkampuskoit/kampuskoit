.row-fluid
  .span12
    = form_for @admin, :html => {:class => "form-horizontal", :id => "form-validate", :novalidate => "novalidate" } do |f|
      - if @admin.errors.any?
        .alert.alert-error
          %button.close{"data-dismiss" => "alert", :type => "button"} &times;
          %div
            - @admin.errors.full_messages.each do |msg|
              = msg
              %br
      .tab-content{:style => "padding: 0;"}
        #account-details.tab-pane.active
          .widget.widget-2
            .widget-head
              %h4.heading.glyphicons.pencil
                %i>
                #{ yield(:title) }
            .widget-body{:style => "padding-bottom: 0;"}
              .row-fluid
                .span6
                  .control-group
                    %label.control-label Nama
                    .controls
                      = f.text_field :nama, :id => "nama", :class => "span10", :placeholder => "ex. Universitas XYZ"
                        %i
                  .control-group
                    %label.control-label Email
                    .controls
                      = f.text_field :email, :id => "email", :class => "span10", :placeholder => "ex. user@xyz.com"
                        %i
                  .control-group
                    %label.control-label Role
                    .controls
                      = f.collection_select :role, Admin::ROLES, :to_s, :humanize , {:selected => @admin.role}, :id => "role", :class => "span10", :data => {:placeholder => "Pilih Admin Role"}
                  .control-group
                    %label.control-label Universitas
                    .controls
                      = collection_select(:admin, :univ_id, Univ.order("nama_pt ASC"), :id, :nama_pt, {}, {:style => "width:200px", :id => "univ", :class => "span10", :data => { :placeholder => "Pilih Admin Role"}})
                  .control-group
                    %label.control-label Password
                    .controls
                      = f.password_field :password, :id => "password", :class => "span10"
                        %i
                  .control-group
                    %label.control-label Konfirmasi Password
                    .controls
                      = f.password_field :password_confirmation, :id => "password_confirmation", :class => "span10"
                        %i
              .form-actions{:style => "margin: 0;"}
                %button.btn.btn-icon.btn-primary.glyphicons.circle_ok{:type => "submit"}
                  %i>
                  Save
                %button.btn.btn-icon.btn-default.glyphicons.circle_remove{:onclick => "history.go(-1);", :type => "button"}
                  %i>
                  Cancel