<% provide(:title, 'Pencarian Jurusan') %>
<header class="jumbotron subhead" id="overview">
   <div class="container">
      <%= form_tag(prodis_path, :method => "get", :class => 'form-inline') do %>
         <fieldset>
            <legend>Pencarian Jurusan</legend>
            <br />
            <%= text_field_tag(:keyword_prodi, "", :placeholder => 'Type something') %>
            <%= select_tag "provinsi_id", options_from_collection_for_select(@provinsis, :id, :provinsi), 
            :prompt => "Semua Provinsi" %>
            <%= select_tag "jenjang_prodi_id", options_from_collection_for_select(@jenjang_prodis, :id, :jenjang), :prompt => "Semua Jenjang" %>
            <button id="search_prodi" type="submit" class="btn">Cari</button>
         </fieldset>
      <% end %>
   </div>
</header>
<div class="container">
   <div style="padding: 20px; padding-bottom: 0px;"></div>
   <div class="row">
      <div class="span12">
         <ul class="nav nav-tabs">
            <li class="active"><a href="#global" data-toggle="tab">Hasil Pencarian</a></li>
            <li class="pull-right">
               <button type="submit" class="btn" onClick="#myModal">Filter & Shorting</button>  
            </li>
         </ul>
         <div class="tab-content">
            <div class="tab-pane active" id="global">
               <div class="span10">
               	<% @prodis.each do |prodi| %>
                  <div class="row">
                     <div class="span2"><a href="#" class="thumbnail"><%= image_tag(prodi.logo_path, :alt => "Prodi Logo") %></a></div>
                     <div class="span6">
                        <p><strong><%= prodi.nama_prodi %></strong><br>
                        	<strong><%= prodi.univ.nama_pt %></strong></p>
                        <%= prodi.kota.kota %>, <%= prodi.kota.provinsi.provinsi %>
                        <p> <i class="icon-home glyphw"></i> <%= prodi.telepon %> <br>
                           <i class="icon-envelope glyphw"></i> <%= prodi.email %> 
                        </p>
                     </div>
                     <div class="span1">
                        <a href="#" class="thumbnail"><img src="img/logo_its.png" alt=""></a>
                        <h5 align="center"><i class="icon-bookmark glyphw"></i>1</h5>
                     </div>
                  </div>
                  <% end %>
                  <%= will_paginate @prodis, :renderer => BootstrapPagination::Rails %>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<hr>