<div class="header-extension">
  <div class="row">
    <div class="large-12 columns">
        <%= form_tag(prodis_path, :method => "get", :class => 'custom') do %>
          <div class="row collapse">
            <div class="small-4 columns">
              <%= text_field_tag(:keyword, @params_value[:keyword], :class => "custom-input", :placeholder => "Masukkan kata kunci ...") %>
            </div>
            <div class="small-3 columns">
              <%= select_tag :provinsi_id, options_from_collection_for_select(@provinsis, :id, :provinsi, :selected => @params_value[:provinsi_id]), :prompt => "Semua Provinsi" %>
            </div>
            <div class="small-3 columns">
              <%= select_tag :jenjang_prodi_id, options_from_collection_for_select(@jenjang_prodis, :id, :jenjang), :prompt => "Semua Jenjang" %>
            </div>
            <div class="small-2 columns">
              <button type="submit" class="button postfix">Search</button>
            </div>
          </div>
          <div class="row collapse">
            <div class="large-8 columns">
                <div class="small-3 large-3 columns">
                  <label class="filter-label" for="checkbox2">
                    <%= check_box_tag(:no_akreditasi, @params_value[:no_akreditasi], @params_value[:no_akreditasi].present? ? true : false, :id => "checkbox2", :style => "display: none;") %><span class="custom checkbox"></span> Tidak Terakreditasi
                  </label>
                </div>
                <div class="small-3 large-3 columns">
                  <label class="filter-label" for="checkbox3">
                    <%= check_box_tag(:akreditasi_a, @params_value[:akreditasi_a], @params_value[:akreditasi_a].present? ? true : false, :id => "checkbox3", :style => "display: none;") %><span class="custom checkbox"></span> Akreditasi A </label>
                </div>
                <div class="small-3 large-3 columns">
                  <label class="filter-label" for="checkbox4">
                    <%= check_box_tag(:akreditasi_b, @params_value[:akreditasi_b], @params_value[:akreditasi_b].present? ? true : false, :id => "checkbox4", :style => "display: none;") %><span class="custom checkbox"></span> Akreditasi B</label>
                </div>
                <div class="small-3 large-3 columns">
                  <label class="filter-label" for="checkbox5">
                    <%= check_box_tag(:akreditasi_c, @params_value[:akreditasi_c], @params_value[:akreditasi_c].present? ? true : false, :id => "checkbox5", :style => "display: none;") %><span class="custom checkbox"></span> Akreditasi C</label>
                </div>
            </div>
            <div class="small-8 large-4 columns">
              <%= select_tag("urutan", options_for_select([['Ascending (A-Z)', 1], ['Descending (Z-A)', 2]], :selected => @params_value[:urutan]), :class => "medium filter right", :prompt => "Urutkan berdasarkan") %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>