<% provide(:title, 'Reset Password') %>
<div class="container">
   <div style="padding: 40px; padding-bottom: 0px;"></div>
   <div class="span8 offset2">
      <%= form_for @subscriber, :url => password_reset_path(params[:id]), :html => {:class => "form-horizontal"} do |f| %>
      <fieldset>
         <div id="legend">
            <legend class="">Reset Password</legend>
         </div>
         <% if flash.any? %>
         <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <div>
               <% flash.each do |key, value| %>
               <%= value %><br>
               <% end %>
            </div>
         </div>
         <% end %>
         <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
               <%= f.password_field :password, :class => "input-xlarge", :placeholder => 'Password' %>
               <p class="help-block">Masukkan password baru</p>
            </div>
         </div>
         <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
               <%= f.password_field :password_confirmation, :class => "input-xlarge", :placeholder => ' Konfirmasi Password' %>
               <p class="help-block">Ulangi password</p>
            </div>
         </div>
         <div class="control-group">
            <!-- Button -->
            <div class="controls">
               <button class="btn btn-success">Update Password</button>
            </div>
         </div>
      </fieldset>
      <% end %>
   </div>
</div>
<hr>