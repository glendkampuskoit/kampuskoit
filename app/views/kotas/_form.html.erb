   <%= form_for @kota do |f| %>
   <fieldset>
      <div id="legend">
         <legend class=""><%= yield(:title) %></legend>
      </div>
      <% if @kota.errors.any? %>
         <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <div>
               <% @kota.errors.full_messages.each do |msg| %>
               <%= msg %><br>
               <% end %>
            </div>
         </div>
      <% end %>
      <div class="control-group">
         <%= f.label "Kota:", :class => "control-label" %>
         <div class="controls">
            <%= f.text_field :kota, :class => "input-xlarge", :placeholder => "Nama Kota" %>
         </div>
      </div>
      <div class="control-group">
         <%= f.label "Provinsi:", :class => "control-label" %>
         <div class="controls">
            <%= collection_select(:kota, :provinsi_id, Provinsi.all, :id, :provinsi) %>
         </div>
      </div>
      <div class="control-group">
         <!-- Button -->
         <div class="controls">
            <button class="btn btn-primary">Save</button>
            <button class="btn" type="reset">Reset</button>
         </div>
      </div>
   </fieldset>
   <% end %>  