<div class="row-fluid">
  <div class="span12">
      <div class="box corner-all">
          <div class="box-header grd-white corner-top">
              <div class="header-control">
                  <a data-box="collapse"><i class="icofont-caret-up"></i></a>
                  <a data-box="close" data-hide="bounceOutRight">&times;</a>
              </div>
              <span><%= yield(:title) %></span>
          </div>
          <div class="box-body">
              <%= form_for @kota, :html => {:class => "form-horizontal", :id => "form-validate", :novalidate => "novalidate" } do |f| %>
                  <% if @kota.errors.any? %>
                     <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <div>
                           <% @kota.errors.full_messages.each do |msg| %>
                           <%= msg %><br>
                           <% end %>
                        </div>
                     </div>
                  <% end %>
                  <div class="control-group">
                      <label class="control-label" for="required">Kota</label>
                      <div class="controls">
                          <%= f.text_field :kota, :id => "required", :id => "kota", :class => "grd-white", :placeholder => "ex. Kota XYZ", :data => {:validate => "{required: true, messages:{required:'Nama Perguruan Tinggi harus diisi'}}"} %>
                      </div>
                  </div>
                  <div class="control-group">
                      <label class="control-label" for="inputSelect">Provinsi</label>
                      <div class="controls">
                          <%= collection_select(:kota, :provinsi_id, Provinsi.order("provinsi ASC"), :id, :provinsi, {}, {:style => "width:200px", :data => {:form => "provinsi", :placeholder => "Pilih Provinsi"}}) %>
                       </div>

                  </div>
                  <div class="form-actions">
                      <button type="submit" class="btn btn-primary">Save</button>
                      <button type="button" class="btn">Cancel</button>
                  </div>
              <% end %>
          </div><!-- /box-body -->
      </div><!-- /box -->
  </div><!-- /span -->
</div>
<script type="text/javascript">
    $(document).ready(function() {
        // try your js
        
        // peity chart
        $("span[data-chart=peity-bar]").peity("bar");

        // uniform
        $('[data-form=uniform]').uniform();

        // select2
        $('[data-form=provinsi]').select2();
    });
</script>