<% provide(:title, 'Kota') %>
<%= link_to new_kota_path do %><button class="btn btn-primary"><i class="icon-plus-sign glyphw-white"></i> Add New</button><% end %>
<div style="padding: 15px; padding-bottom: 0px;"></div>
<table class="table table-striped table-bordered">
   <thead>
      <tr>
         <th>No.</th>
         <th>Kota</th>
         <th>Provinsi</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
   		<% no = 0 %>
      <% @kotas.each do |kota| %>
      <tr>
         <td><%= no = no + 1 %></td>
         <td><%= kota.kota %></td>
         <td><%= kota.provinsi.provinsi %></td>
         <td>
         	<div class="btn-group pull-right">
              <%= link_to edit_kota_path(kota), :role => "button", :class => "btn btn-info" do %><i class="icon-edit glyphw"></i> Edit <% end %>
             <%= link_to kota_path(kota), method: :delete, :role => "button", :class => "btn btn-danger" do %><i class="icon-trash glyphw"></i> Hapus <% end %>
          </div>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>
