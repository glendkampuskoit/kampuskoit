- provide(:title, "Data Kota")
%a.btn.btn-info.btn-small.small-margin-bottom{:href => "#{ new_kota_path }"} Tambah Kota
.relativeWrap
  .widget.widget-gray.widget-gray-white
    .widget-head
      %h4.heading Data Kota
    .widget-body
      %table.dynamicTable.table.table-striped.table-bordered.table-primary.table-condensed{:border => "0", :cellpadding => "0", :cellspacing => "0"}
        %thead
          %tr
            %th{:width => "350"} Nama Kota
            %th{:width => "350"} Provinsi
            %th{:width => "50"} &nbsp;
        %tbody
          - @kotas.each do |kota|
            %tr.gradeX
              %td= kota.kota
              %td= kota.provinsi.provinsi
              %td.center.actions
                %a.btn-action.glyphicons.pencil.btn-success{:href => "#{ edit_kota_path(kota) }"}
                  %i
                %a.btn-action.glyphicons.remove_2.btn-danger{:href => "#{ kota_path(kota) } ", :method => :delete}
                  %i