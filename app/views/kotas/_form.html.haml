.row-fluid
  .span12
    .box.corner-all
      .box-header.grd-white.corner-top
        .header-control
          %a{"data-box" => "collapse"}
            %i.icofont-caret-up
          %a{"data-box" => "close", "data-hide" => "bounceOutRight"} &times;
        %span= yield(:title)
      .box-body
        = form_for @kota, html: { class: "form-horizontal", id: "form-validate", novalidate: "novalidate" } do |f|
          - if @kota.errors.any?
            .alert.alert-error
              %button.close{"data-dismiss" => "alert", type: "button"} &times;
              %div
                - @kota.errors.full_messages.each do |msg|
                  = msg
                  %br
          .control-group
            %label.control-label{ for: "required" } Kota
            .controls
              = f.text_field :kota, id: "required", id: "kota", class: "grd-white", placeholder: "ex. Kota XYZ", data: { validate: "{required: true, messages:{required:'Nama Perguruan Tinggi harus diisi'}}"}
          .control-group
            %label.control-label{ for: "inputSelect" } Provinsi
            .controls
              = collection_select(:kota, :provinsi_id, Provinsi.order("provinsi ASC"), :id, :provinsi, {}, { style: "width:200px", data: {form: "provinsi", placeholder: "Pilih Provinsi"}})
          .form-actions
            %button.btn.btn-primary{ type: "submit" } Save
            %button.btn{ onclick: "history.go(-1);", type: "button"} Cancel

:javascript
  $(document).ready(function() {      
      // peity chart
      $("span[data-chart=peity-bar]").peity("bar");

      // uniform
      $('[data-form=uniform]').uniform();

      // select2
      $('[data-form=provinsi]').select2();
      $('#form-validate').validate();
  });