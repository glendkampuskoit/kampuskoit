.row-fluid
  .span12
    .box.corner-all
      .box-header.grd-white.corner-top
        .header-control
          %a{"data-box" => "collapse"}
            %i.icofont-caret-up
          %a{"data-box" => "close", "data-hide" => "bounceOutRight"} &times;
        %span= yield(:title)
      .box-body
        = form_for @range_ipk, :html => {:class => "form-horizontal", :id => "form-validate", :novalidate => "novalidate" } do |f|
          - if @range_ipk.errors.any?
            .alert.alert-error
              %button.close{"data-dismiss" => "alert", :type => "button"} &times;
              %div
                - @range_ipk.errors.full_messages.each do |msg|
                  = msg
                  %br
          .control-group
            %label.control-label{:for => "required"} Ipk 
            .controls

              = f.text_field :ipk , :id => "ipk", :class => "grd-white", :placeholder => "ex. IPK 2.0 sampai 3.0 ", :data => {:validate => "{required: true, messages: {required: 'Range ipk harus diisi'}}" }

          .control-group
            %label.control-label{:for => "required"} Bobot
            .controls
              = f.text_field :bobot , :id => "bobot", :class => "grd-white", :data => {:validate => "{required: true, messages: {required: 'Bobot harus diisi'}}" }

          .form-actions
            %button.btn.btn-primary{:type => "submit"} Save
            %button.btn{:onclick => "history.go(-1);", :type => "button"} Cancel

:javascript
  $(document).ready(function() {
      // try your js
      
      // peity chart
      $("span[data-chart=peity-bar]").peity("bar");

      // uniform
      $('[data-form=uniform]').uniform();

      // validate form
      $('#form-validate').validate();
  });