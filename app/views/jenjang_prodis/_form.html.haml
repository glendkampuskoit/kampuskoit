.row-fluid
  .span12
    .box.corner-all
      .box-header.grd-white.corner-top
        .header-control
          %a{"data-box" => "collapse"}
            %i.icofont-caret-up
          %a{"data-box" => "close", "data-hide" => "bounceOutRight"} &times;
        %span= yield(:title)
      .box-body
        = form_for @jenjang_prodi, html: { class: "form-horizontal", id: "form-validate", novalidate: "novalidate" } do |f|
          - if @jenjang_prodi.errors.any?
            .alert.alert-error
              %button.close{ "data-dismiss" => "alert", type: "button" } &times;
              %div
                - @jenjang_prodi.errors.full_messages.each do |msg|
                  = msg
                  %br
          .control-group
            %label.control-label{ for: "required" } Jenjang
            .controls
              = f.text_field :jenjang, id: "jenjang", class: "grd-white", placeholder: "ex. JenjangXYZ", data: { validate: "{required: true, messages: {required: 'Jenis Perguruan Tinggi harus diisi'}}"}
          .control-group
            %label.control-label{ for: "required" } Keterangan
            .controls
              = f.text_field :keterangan, id: "keterangan", class: "grd-white"
          .form-actions
            %button.btn.btn-primary{ type: "submit" } Save
            %button.btn{ onclick: "history.go(-1);", type: "button" } Cancel

:javascript
  $(document).ready(function() {
      
      // peity chart
      $("span[data-chart=peity-bar]").peity("bar");

      // uniform
      $('[data-form=uniform]').uniform();
      $('#form-validate').validate();
  });