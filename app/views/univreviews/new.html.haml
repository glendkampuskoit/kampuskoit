.row
  .small-9.small-centered.columns
    .writereview-wrapper
      = form_for @univreview, :html => { class: 'writereview-form custom' } do |f|
        %fieldset
          - if @univreview.errors.any?
            %div{ data: { alert: true }, class: "alert-box alert", align: "center" }
              - @univreview.errors.full_messages.each do |msg|
                = msg
                %br
                %a{ href: "#", class: "close"} &times;
          .row
            .large-6.columns
              .row
                .small-4.large-4.columns
                  %label.inline.no-margin Fasilitas
                .small-8.large-8.columns
                  .rating
                    = f.select(:fasilitas_point, options_for_select(@points))
                    
              .row
                .small-4.large-4.columns
                  %label.inline.no-margin Beasiswa
                .small-8.large-8.columns
                  .rating
                    = f.select(:beasiswa_point, options_for_select(@points))
              .row
                .small-4.large-4.columns
                  %label.inline.no-margin Relevansi
                .small-8.large-8.columns
                  .rating
                    = f.select(:relevansi_point, options_for_select(@points))
          .row
            .small-10.collumns
              .row.subject-field
                .large-2.columns
                  %label.inline.extra-left-padding{:for => "right-label-2"} Review
                .small-11.large-10.columns
                  = f.text_area :review, :class => "right-label-2 left inline"
          .row
            .small-3.small-centered.columns
              = f.hidden_field :univ_id, :value => @univ_id
              = f.hidden_field :subscriber_id, :value => current_subscriber.id
              %input.small.button.review-submit{:type => "submit", :value => "Submit"}