<% provide(:title, 'Administrator Login') %>
<div class="span8 offset2">
   <%= form_for :admin_session, :url => admin_sessions_path, :html => {:class => "form-horizontal"} do |f| %>
      <fieldset>
         <div id="legend">
            <legend class="">Administrator Login</legend>
         </div>
         <% if flash.any? %>
         <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <div>
               <% flash.each do |key, value| %>
               <%= value %><br>
               <% end %>
            </div>
         </div>
         <% end %>
         <div class="control-group">
            <!-- E-mail -->
            <label class="control-label" for="email">E-mail</label>
            <div class="controls">
               <%= f.text_field :email, :class => "input-xlarge", :placeholder => 'Email' %>
               <p class="help-block">Masukkan E-mail untuk login</p>
            </div>
         </div>
         <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
               <%= f.password_field :password, :class => "input-xlarge", :placeholder => 'Password' %>
               <p class="help-block">Masukkan password yang sesuai</p>
            </div>
         </div>
         <div class="control-group">
            <!-- Button -->
            <div class="controls">
               <button class="btn btn-success">Login</button> <a href="#collapseOne" data-toggle="collapse" data-parent="#accordion2">Lupa Password?</a>
            </div>
         </div>
      </fieldset>
   <% end %>
   <div id="collapseOne" class="accordion-body collapse ">
      <form class="form-horizontal">
         <div class="control-group">
            <div class="controls input-append">
               <input type="text" id="email" name="email" placeholder="Email">
               <button class="btn btn-info">Send New Password</button>
            </div>
         </div>
      </form>
   </div>
</div>
