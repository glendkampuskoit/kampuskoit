<% provide(:title, 'Sign Up') %>
<div>
	<%= form_for(@user) do |f| %>
	<%= render 'shared/signup_errors' %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create New Account" %>
	<% end %>
</div>