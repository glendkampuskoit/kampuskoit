<% provide(:title, @univ.nama_pt) %>
<div class="container-fluid page-header">
   <div class="row-fluid">
      <div class="span7 offset1">
         <h2><%= @univ.nama_pt.present? ? @univ.nama_pt : "- Unknown PT -" %></h2>
         <h4><%= @univ.kota.kota.present? ? @univ.kota.kota : "- Unknown City -" %>, <%= @univ.kota.provinsi.provinsi.present? ? @univ.kota.provinsi.provinsi.capitalize : "- Unknown Province -" %></h4>
      </div>
      <div class="span2"> <a href="#" class="thumbnail"><%= image_tag(@univ.logo_path, :alt => "Univ Logo", :onerror => "this.src='/assets/default.jpg';") %></a> </div>
   </div>
</div>
<div class="container">
