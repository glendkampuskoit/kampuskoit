                                 <tr>
                                    <td>Status</td>
                                    <td><%= @univ.status_negeri.present? ? @univ.status_negeri.capitalize : " -belum ada data-" %></td>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr>
                                    <td>Tahun Berdiri</td>
                                    <td><%= @univ.tahun_berdiri.present? ? @univ.tahun_berdiri : "-belum ada data-" %></td>
                                 </tr>
                                 <tr>
                                    <td>Alamat</td>
                                    <td><%= @univ.alamat.present? ? @univ.alamat : "-belum ada data-" %>, <%= @univ.kota.kota.present? ? @univ.kota.kota : "-belum ada data-" %></td>
                                 </tr>
                                 <tr>
                                    <td>Telepon</td>
                                    <td><%= @univ.telepon.present? ? @univ.telepon : "-belum ada data-" %></td>
                                 </tr>
                                 <tr>
                                    <td>Email</td>
                                    <td><%= @univ.email.present? ? @univ.email : "-belum ada data-" %></td>
                                 </tr>
                                 <tr>
                                    <td>Website</td>
                                    <td><%= @univ.website.present? ? link_to(@univ.website, @univ.website) : "-belum ada data-" %></td>
                                 </tr>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
                  <div class="accordion-group">
                     <div class="accordion-heading"> 
                        <span class="accordion-toggle"><strong>Deskripsi</strong>
                        <a class="btn pull-right" data-toggle="collapse" data-parent="#profile_tab" href="#deskripsi">Lihat Detail</a>
                        </span> 
                     </div>
                     <div id="deskripsi" class="accordion-body collapse">
                        <div class="accordion-inner">
                           <p><%= @univ.deskripsi.present? ? @univ.deskripsi : "-belum ada data-" %></p>
