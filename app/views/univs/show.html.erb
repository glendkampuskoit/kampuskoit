                     <div id="seleksi-masuk" class="accordion-body collapse">
                        <div class="accordion-inner">
                           <p><%= @univ.seleksi_masuk.present? ? @univ.seleksi_masuk : "-belum ada data-" %></p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="tab-pane" id="gallery">
               <% if @univ.univgalleries.present? %>
               <div id="myCarousel" class="carousel slide">
                  <ol class="carousel-indicators">
                     <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                     <li data-target="#myCarousel" data-slide-to="1"></li>
                     <li data-target="#myCarousel" data-slide-to="2"></li>
                  </ol>
                  <div class="carousel-inner">
                    <% @univ.univgalleries.each do |gallery| %>
                     <div class="item active">
                        <%= image_tag(gallery.path, :alt => "Image Galleries") %>
                        <div class="carousel-caption">
                           <h4><%= gallery.caption %></h4>
                           <p><%= gallery.description %></p>
                        </div>
                     </div>
