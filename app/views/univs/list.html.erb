<% provide(:title, 'List Perguruan Tinggi') %>
<%= link_to new_univ_path do %><button class="btn btn-primary"><i class="icon-plus-sign glyphw-white"></i> Add New</button><% end %>
<div style="padding: 15px; padding-bottom: 0px;"></div>


<div class="container">
  <%= form_tag(univs_list_path, :method => "get", :class => 'form-inline') do %>
    <%= text_field_tag(:keyword_pt, "", :class => 'input-xlarge', :placeholder => 'Pencarian..') %>
  <% end %>
</div>


<table class="table table-striped table-bordered">
   <thead>
      <tr>
         <th>No.</th>
         <th>Kode PT</th>
         <th>Nama PT</th>
         <th>Provinsi</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
   		<% no = @univs.offset %>
      <% @univs.each do |univ| %>
      <tr>
         <td><%= no = no + 1 %>.</td>
         <td><%= univ.id %></td>
         <td><%= univ.nama_pt %></td>
         <td><%= univ.kota.present? ? univ.kota.provinsi.provinsi : "-Unknown Provinsi-" %></td>
         <td>
         	<div class="btn-group pull-right">
              <%= link_to edit_univ_path(univ), :role => "button", :class => "btn btn-info" do %><i class="icon-edit glyphw"></i> Edit <% end %>
             <% if can? :destroy, univ %><%= link_to univ_path(univ), method: :delete, :role => "button", :class => "btn btn-danger" do %><i class="icon-trash glyphw"></i> Hapus <% end %><% end %>
          </div>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>
<%= will_paginate @univs, :renderer => BootstrapPagination::Rails %>
