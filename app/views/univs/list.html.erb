<% provide(:title, "Data Perguruan Tinggi") %>
<div class="row-fluid">
    <div class="span12">
    <%= link_to "Tambah Perguruan Tinggi", new_univ_path, :role => "button", :class => "btn btn-mini btn-primary" %>

    <%= form_tag(univs_list_path, :method => "get", :class => 'form-inline pull-right') do %>
        <%= text_field_tag(:keyword, "", :class => 'input-xlarge', :placeholder => 'Pencarian..') %>
    <% end %>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box corner-all">
            <div class="box-header grd-white corner-top">
                <div class="header-control">
                    <a data-box="collapse"><i class="icofont-caret-up"></i></a>
                    <a data-box="close" data-hide="bounceOutRight">&times;</a>
                </div>
                <span>Data Perguruan Tinggi</span>
            </div>
            <div class="box-body">
                <table class="table table-hover responsive">
                    <thead>
                        <tr>
                            <th>Kode</th>
                            <th>Perguruan Tinggi</th>
                            <th>Provinsi</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @univs.each do |univ| %>
                        <tr>
                            <td><%= univ.id %></td>
                            <td><%= univ.nama_pt %></td>
                            <td><%= univ.kota.present? ? univ.kota.provinsi.provinsi : " - " %></td>
                            <td class="center">
                                <span class="label label-info">
                                    <%= link_to "Edit",edit_univ_path(univ) %>
                                </span>
                                <span class="label label-important">
                                    <%= link_to "Delete",univ_path(univ), method: :delete, :class =>"delete" %>
                                </span>
                            </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <%= will_paginate @univs, :renderer => BootstrapPagination::Rails %>
            </div><!-- /box-body -->
        </div><!-- /box -->
    </div><!-- /span -->
</div>
<script type="text/javascript">
    $(document).ready(function() {
        // try your js
        
        // peity chart
        $("span[data-chart=peity-bar]").peity("bar");
        
        $('.delete').on('click', function () {
            return confirm('Anda yakin akan menghapus data ini?');
        });
    });
</script>