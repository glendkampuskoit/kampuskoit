<% provide(:title, 'Tambah Perguruan Tinggi') %>

<%= form_for @univ, :url => "/admin/univs", :html => { :multipart => true } do |f| %>
<fieldset>
   <div id="legend">
      <legend class="">Tambah Perguruan Tinggi</legend>
   </div>
   <% if @univ.errors.any? %>
   <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <div>
         <% @univ.errors.full_messages.each do |msg| %>
         <%= msg %><br>
         <% end %>
      </div>
   </div>
   <% end %>
   <div class="control-group">
      <%= f.label "Nama Perguruan Tinggi:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_field :nama_pt, :class => "input-xxlarge", :placeholder => "Nama PT" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Tahun Berdiri:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_field :tahun_berdiri, :class => "input-medium", :placeholder => "Tahun Berdiri" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Status:", :class => "control-label" %>
      <div class="controls">
         <%= select_tag("univ[status_negeri]", options_for_select([["Perguruan Tinggi Negeri", "negeri"], ["Perguruan Tinggi Swasta", "swasta"]])) %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Jenis PT:", :class => "control-label" %>
      <div class="controls">
         <%= collection_select(:univ, :jenis_pt_id, JenisPt.all, :id, :jenis) %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Email:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_field :email, :class => "input-large", :placeholder => "Email" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Website:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_field :website, :class => "input-large", :placeholder => "Website" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Alamat:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :alamat, :rows => "3", :class => "field span4", :placeholder => "Alamat" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Kota:", :class => "control-label" %>
      <div class="controls">
         <%= collection_select(:univ, :kota_id, Kota.all, :id, :kota) %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Telepon:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_field :telepon, :class => "input-xlarge", :placeholder => "Telepon" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Upload Logo:", :class => "control-label" %>
      <div class="controls">
         <%= f.file_field :image %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Deskripsi:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :deskripsi, :rows => "6", :class => "field editor", :placeholder => "Deskripsi" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Profile:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :profile, :rows => "6", :class => "field editor", :placeholder => "Profile" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Visi & Misi:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :visi, :rows => "6", :class => "field editor", :placeholder => "Visi" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Seleksi Masuk:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :seleksi_masuk, :rows => "5", :class => "field editor", :placeholder => "Seleksi Masuk" %>
      </div>
   </div>
   <div class="control-group">
      <%= f.label "Kapasitas Akademik:", :class => "control-label" %>
      <div class="controls">
         <%= f.text_area :kapasitas_akademik, :rows => "5", :class => "field editor", :placeholder => "Kapasitas Akademik" %>
      </div>
   </div>
   <div class="control-group">
      <!-- Button -->
      <div class="controls">
         <button class="btn btn-primary">Save</button>
         <button class="btn" type="reset">Reset</button>
      </div>
   </div>
</fieldset>

<script type="text/javascript">
   $(function() {
      $('.editor').each(function(){
         CKEDITOR.replace( $(this).attr('id') );
      });
   });
</script>
<% end %>