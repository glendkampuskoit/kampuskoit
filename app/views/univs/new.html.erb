<% provide(:title, 'Tambah Perguruan Tinggi') %>

<%= form_for @univ, :url => "/admin/univs" do |f| %>
  <% if @univ.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@univ.errors.count, "error") %> prohibited this univ from being saved:</h2>
      <ul>
      <% @univ.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nama_pt %><br />
    <%= f.text_field :nama_pt %>
  </div>
  <div class="field">
    <%= f.label :tahun_berdiri %><br />
    <%= f.text_field :tahun_berdiri %>
  </div>
  <div class="field">
    <%= f.label :jenis_pt %><br />
    <%= collection_select(:univ, :jenis_pt_id, JenisPt.all, :id, :jenis) %>
  </div> 
  <div class="field">
    <%= f.label :status_negeri %><br />
    <%= select(:univ, :status_negeri, options_for_select([['Negeri', 'negeri'], ['Swasta', 'swasta']])) %>
  </div> 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :alamat %><br />
    <%= f.text_field :alamat %>
  </div>
  <div class="field">
    <%= f.label :kota %><br />
    <%= collection_select(:univ, :kota_id, Kota.all, :id, :kota) %>
  </div>  
  <div class="field">
    <%= f.label :telepon %><br />
    <%= f.text_field :telepon %>
  </div>
  <div class="field">
    <%= f.label :deskripsi %><br />
    <%= f.text_area :deskripsi %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>
  <div class="field">
    <%= f.label :visi %><br />
    <%= f.text_area :visi %>
  </div>
  <div class="field">
    <%= f.label :misi %><br />
    <%= f.text_area :misi %>
  </div>
  <div class="field">
    <%= f.label :seleksi_masuk %><br />
    <%= f.text_area :seleksi_masuk %>
  </div>
  <div class="field">
    <%= f.label :kapasitas_akademik %><br />
    <%= f.text_area :kapasitas_akademik %>
  </div>
  <div class="actions">
    <%= submit_tag("Simpan") %>
  </div>
<% end %>
