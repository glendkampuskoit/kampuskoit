<% provide(:title, 'Ranking Perguruan Tinggi') %>

<div class="row category-panel">
  <div class="large-5 columns">
    <ul class="button-group even-3">
      <li><a href="<%= ranking_path %>" class="button medium alert">Global</a></li>
      <li><a href="#" data-dropdown="drop1" class="button dropdown alert">Kategori</a></li>
      <li><a href="#" data-dropdown="drop2" class="button dropdown alert">Provinsi</a></li>      
    </ul>
  </div>
</div>
<div class="row">
  <div class="large-9 columns">
    <div class="row category-post">
      <div class="large-12 columns">
        <div class="row">
          <div class="large-12 columns">
            <h3 class="post-header">
              <%= @title %>
            </h3>
            <p class="post-author">
              Last Updated - <span>5 Juni 2013</span>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <% i = 0 %>
            <% @univrankings.each do |univranking| %>
            <article class="article-post">
              <div class="row">
                <div class="small-5 large-5 columns">
                  <%= image_tag(univranking.univ.featured_image_url(:thumb), :alt => "Gambar belum tersedia", :onerror => "this.src='/assets/default.jpg';") %>
                </div>
                <div class="small-7 large-7 columns">
                  <p class="rank"><%= i += 1 %></p>
                  <h6 class="entry-header"><%= link_to univranking.univ.nama_pt.titleize, univ_path(univranking.univ) %></h6>
                  <div class="rating">
                        
                  </div>
                  <p class="entry-text"><%= univranking.univ.deskripsi %></p>
                  <div class="entry-more">
                    <%= link_to "Read More", univ_path(univranking.univ), :class => "tiny button read-more-button left" %>
                    <p class="entry-link right">
                      <% if univranking.univ.website.present? && univranking.univ.email.present? %>
                         <span><%= link_to univranking.univ.website.downcase, univranking.univ.website, :target => "_blank" %></span>
                         <span class="entry-link-separator">|</span>
                         <span><%= mail_to univranking.univ.email, univranking.univ.email.downcase %></span>
                      <% elsif univranking.univ.email.present? %>
                        <span><%= mail_to univranking.univ.email, univranking.univ.email.downcase %></span>
                      <% elsif univranking.univ.email.present? %>
                        <span><%= mail_to univranking.univ.email, univranking.univ.email.downcase %></span>
                      <% end %>
                    </p>                            
                  </div>
                </div>
              </div>
            </article>
            <% end %>
            <div class="row">
              <div class="small-3 small-centered columns">
                <a href="#" class="button small nav-bottom"></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>        
  </div>
  <%= render :partial => "layouts/sidebar" %>
</div>

<!--Dropdown Content-->
<ul id="drop1" class="f-dropdown">
 <% @jenis_pts.each do |jenis_pt| %>
    <li>
      <%= link_to jenis_pt.jenis, "#{ranking_path}?kategori=#{jenis_pt.id}" %>
    </li>
 <% end %>
</ul>

<ul id="drop2" class="f-dropdown">
 <% @provinsis.each do |provinsi| %>
    <li>
      <%= link_to provinsi.provinsi, "#{ranking_path}?provinsi=#{provinsi.id}" %>
    </li> 
 <% end %>
</ul>
