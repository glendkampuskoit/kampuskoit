- provide(:title, "Ranking Perguruan Tinggi")
.row-fluid
  = form_tag(ranking_list_path, :method => "get") do
    = text_field_tag(:keyword, "", :class => "span3", :placeholder => 'Pencarian..')
%div{:style => "clear:both"}
.relativeWrap
  .widget.widget-gray.widget-gray-white
    .widget-head
      %h4.heading Data Ranking Perguruan Tinggi
    .widget-body.center
      %table.table.table-striped.table-bordered.table-primary.table-condensed{:border => "0", :cellpadding => "0", :cellspacing => "0"}
        %thead
          %tr
            %th.center{:width => "30"} Ranking
            %th{:width => "100"} Kode PT
            %th{:width => "150"} Nama Perguruan Tinggi
            %th{:width => "100"} Government
            %th{:width => "100"} College
            %th{:width => "100"} Society
            %th{:width => "90"} Total
        %tbody
          - no = @univrankings.offset
          - @univrankings.each do |ranking|
            %tr
              %td.center #{no += 1}
              %td= ranking.univ_id
              %td= ranking.univ.nama_pt
              %td= ranking.government
              %td= ranking.college
              %td= ranking.society
              %td= ranking.score
      = will_paginate @univrankings, :renderer => BootstrapPagination::Rails