- provide(:title, "Data Biaya Program Studi")
.row-fluid
  .span12
    = link_to "Tambah Biaya Program Studi", new_univ_prodi_prodi_biaya_path(@prodi.univ, @prodi), role: "button", class: "btn btn-mini btn-primary"
.row-fluid
  .span12
    .box.corner-all
      .box-header.grd-white.corner-top
        .header-control
          %a{"data-box" => "collapse"}
            %i.icofont-caret-up
          %a{"data-box" => "close", "data-hide" => "bounceOutRight"} &times;
        %span Data Biaya Program Studi #{ @prodi.nama_prodi.titleize } - #{ @prodi.univ.nama_pt.titleize }
      .box-body
        %table#datatables.table.table-hover.responsive
          %thead
            %tr
              %th Biaya
              %th Nilai
              %th &nbsp;
          %tbody
            - @prodi_biayas.each do |biaya|
              %tr
                %td= biaya.biaya
                %td= biaya.nilai
                %td.center
                  %span.label.label-info
                    = link_to "Edit", edit_univ_prodi_prodi_biaya_path(biaya.prodi.univ, biaya.prodi, biaya)
                  %span.label.label-important
                    = link_to "Delete", univ_prodi_prodi_biaya_path(biaya.prodi.univ, biaya.prodi, biaya), method: :delete, class: "delete"

:javascript
  $(document).ready(function() {      
      // peity chart
      $("span[data-chart=peity-bar]").peity("bar");
                      
      // datatables
      $('#datatables').dataTable( {
          "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
          "sPaginationType": "bootstrap",
          "oLanguage": {
                  "sLengthMenu": "_MENU_ records per page"
          }
      });

      $('.delete').on('click', function () {
          return confirm('Anda yakin akan menghapus data ini?');
      });
  });